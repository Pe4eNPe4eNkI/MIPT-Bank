<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Account">

    <EditText
        android:id="@+id/rewrite_surname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_angles_text_view"
        android:hint="Surname"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/light_gray"
        android:textSize="20sp"
        android:maxLines="1"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/rewrite_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/rewrite_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_angles_text_view"
        android:hint="Name"
        android:maxLines="1"
        android:inputType="textPersonName"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/light_gray"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/rewrite_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/rewrite_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_angles_text_view"
        android:hint="Address"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/light_gray"
        android:textSize="20sp"
        android:maxLines="1"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/rewrite_passport"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/rewrite_passport"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:maxLines="1"
        android:inputType="textPersonName"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_angles_text_view"
        android:hint="Passport id"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/light_gray"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/rewrite_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/rewrite_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_angles_text_view"
        android:hint="Login"
        android:inputType="textPersonName"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/light_gray"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/rewrite_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/rewrite_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_angles_text_view"
        android:hint="Password"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/light_gray"
        android:textSize="20sp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/rewrite_password2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/rewrite_password2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_angles_text_view"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/light_gray"
        android:textSize="20sp"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/rewrite_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@color/light_gray"
        android:backgroundTint="@color/light_gray"
        android:clickable="false"
        app:layout_constraintBottom_toTopOf="@+id/rewrite_surname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/rewrite_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/no_angles_button"
        android:fontFamily="@font/jost_medium"
        android:text="Rewrite"
        android:textAllCaps="false"
        android:textColor="@color/clean_white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/jost_medium"
        android:gravity="bottom"
        android:text="You can rewrite or add some information"
        android:textColor="@color/dark_gray"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        android:clickable="true"
        android:fontFamily="@font/jost_medium"
        android:gravity="bottom|center"
        android:text="Exit"
        android:textColor="@color/dark_gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rewrite_button" />

</androidx.constraintlayout.widget.ConstraintLayout>