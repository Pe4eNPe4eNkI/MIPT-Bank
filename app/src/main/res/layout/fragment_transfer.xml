<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".transfer">

    <EditText
        android:inputType="number"
        android:theme="@style/Based_enter"
        android:id="@+id/receiver_bill_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_angles_text_view"
        android:hint="Recipient's bill id"
        android:numeric="signed"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/light_gray"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/sum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="1"/>

    <EditText
        android:inputType="number"
        android:theme="@style/Based_enter"
        android:textCursorDrawable="@drawable/cursor"
        android:id="@+id/sum"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_angles_text_view"
        android:hint="Sum"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/light_gray"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="1"/>

    <EditText
        android:theme="@style/Based_enter"
        android:textCursorDrawable="@drawable/cursor"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_angles_text_view"
        android:hint="Password"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/light_gray"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/transfer_confirm_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="1"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@color/light_gray"
        android:backgroundTint="@color/light_gray"
        android:clickable="false"
        app:layout_constraintBottom_toTopOf="@+id/receiver_bill_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/transfer_confirm_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="340dp"
        android:background="@drawable/no_angles_button"
        android:fontFamily="@font/jost_medium"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="@color/clean_white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/jost_medium"
        android:gravity="bottom"
        android:text="Confirm operation"
        android:textColor="@color/dark_gray"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/back_to_bill_lobby"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        android:clickable="true"
        android:fontFamily="@font/jost_medium"
        android:gravity="bottom|center"
        android:text="Exit"
        android:textColor="@color/dark_gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transfer_confirm_button" />

</androidx.constraintlayout.widget.ConstraintLayout>