<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".layout_classes.registration">


    <EditText
        android:id="@+id/sign_up_surname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_angles_text_view"
        android:hint="Surname"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/light_gray"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="20sp"
        android:theme="@style/Based_enter"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:theme="@style/Based_enter"
        android:textCursorDrawable="@drawable/cursor"
        android:id="@+id/sign_up_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_angles_text_view"
        android:hint="Name"
        android:maxLines="1"
        android:inputType="textPersonName"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/light_gray"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:theme="@style/Based_enter"
        android:textCursorDrawable="@drawable/cursor"
        android:id="@+id/sign_up_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_angles_text_view"
        android:hint="Address"
        android:maxLines="1"
        android:inputType="textPersonName"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/light_gray"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_passport"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:theme="@style/Based_enter"
        android:textCursorDrawable="@drawable/cursor"
        android:id="@+id/sign_up_passport"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_angles_text_view"
        android:hint="Passport id"
        android:maxLines="1"
        android:inputType="textPersonName"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/light_gray"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:theme="@style/Based_enter"
        android:textCursorDrawable="@drawable/cursor"
        android:id="@+id/sign_up_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_angles_text_view"
        android:hint="Login"
        android:maxLines="1"
        android:inputType="textPersonName"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/light_gray"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_password1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:theme="@style/Based_enter"
        android:textCursorDrawable="@drawable/cursor"
        android:id="@+id/sign_up_password1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_angles_text_view"
        android:hint="Password"
        android:maxLines="1"
        android:inputType="textPassword"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/light_gray"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_password2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/sign_up_password2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_angles_text_view"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/light_gray"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="20sp"
        android:theme="@style/Based_enter"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_pincode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/sign_up_pincode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_angles_text_view"
        android:hint="Pincode"
        android:inputType="number"
        android:maxLines="1"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/light_gray"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="20sp"
        android:theme="@style/Based_enter"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/line_button"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@color/light_gray"
        android:backgroundTint="@color/light_gray"
        android:clickable="false"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_surname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/no_angles_button"
        android:fontFamily="@font/jost_medium"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="@color/clean_white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/jost_medium"
        android:gravity="bottom"
        android:text="Enter information"
        android:textColor="@color/dark_gray"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/line_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/want_sign_in"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        android:clickable="true"
        android:fontFamily="@font/jost_medium"
        android:gravity="bottom|center"
        android:text="Sign in"
        android:textColor="@color/dark_gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_button" />

</androidx.constraintlayout.widget.ConstraintLayout>